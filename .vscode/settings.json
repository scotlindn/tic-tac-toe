{
  "editor.tabSize": 2,
  "eslint.packageManager": "yarn",
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],
  "files.insertFinalNewline": true,
  "files.trimFinalNewlines": true,
  "files.trimTrailingWhitespace": true,
  "editor.wordWrapColumn": 90,
  "editor.rulers": [90],
  // --- TS Editor Configs ---
  "typescript.updateImportsOnFileMove.enabled": "always",
  "typescript.preferences.importModuleSpecifier": "shortest",
  "typescript.preferences.quoteStyle": "single",
  "typescript.tsdk": "node_modules/typescript/lib",
  // --- Hidden Files --- in search and explorer
  "files.exclude": {
    "**/node_modules": true,
    "**/.tsbuildinfo": true,
    "**/.cache": true,
    "**/.idea": true
  },
  "search.exclude": {
    "**/node_modules": true,
    "**/bower_components": true,
    "**/.cache": true,
    "**/dist": true,
    "**/.next": true,
    "**/.idea": true,
    "**/*.svg": true,
    "**/tsconfig.tsbuildinfo": true,
    "frontend-remix/build": true,
    "frontend-remix/public/build": true,
    "frontend-next/build": true,
    "frontend-next/storybook-build": true,
    "oc/build": true,
    "**/.yarn": true,
    "**/.pnp.*": true
  },
  // --- ESLint formatter ---
  // disable default vscode formatters and use ESlint instead
  "javascript.format.enable": false,
  "typescript.format.enable": false,
  "editor.formatOnPaste": false,
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": true,
    "source.fixAll.stylelint": false
  },
  "[markdown]": {
    "files.trimTrailingWhitespace": false
  },
  "[typescript]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false
  },
  "[typescriptreact]": {
    "editor.formatOnSave": true,
    "editor.formatOnPaste": false
  },
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true
  },
  "[graphql]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.snippetSuggestions": "bottom"
  },
  "emmet.excludeLanguages": ["markdown", "typescriptreact"],
  // --- File Language & Icon Assoiations ---
  "files.associations": {
    "Dockerfile-prod": "dockerfile",
    "Dockerfile-dev": "dockerfile",
    ".dockerignore": "ignore",
    ".postcssrc": "json",
    "tsconfig.*.json": "jsonc"
  },
  "material-icon-theme.folders.associations": {
    "components": "React-components",
    "frontend": "Next"
  },
  "material-icon-theme.files.associations": {
    "docker-compose.base.yml": "Docker",
    "docker-compose.nightly.yml": "Docker",
    "docker-compose.production.yml": "Docker",
    "docker-compose.preview.yml": "Docker"
  },
  "vsicons.associations.files": [
    {
      "icon": "docker",
      "filename": true,
      "extensionsGlob": ["yml"],
      "format": "svg",
      "filenamesGlob": [
        "docker-compose",
        "docker-compose.local",
        "docker-compose.base",
        "docker-compose.nightly",
        "docker-compose.preview",
        "docker-compose.qa",
        "docker-compose.insiders",
        "docker-compose.production",
        "docker-compose.cypress",
        "docker-compose.cypress.override"
      ]
    },
    {
      "icon": "tsconfig",
      "filename": true,
      "format": "svg",
      "extensionsGlob": ["json"],
      "filenamesGlob": ["tsconfig.base", "tsconfig.front"]
    },
    {
      "icon": "jest",
      "filename": true,
      "format": "svg",
      "extensionsGlob": ["js"],
      "filenamesGlob": ["jest-e2e.config", "jest.config.integration"]
    }
  ],
  "svg.preview.background": "custom",
  "typescript.enablePromptUseWorkspaceTsdk": true,
  "cSpell.words": [
    "Baskervville",
    "immer"
  ]
}
